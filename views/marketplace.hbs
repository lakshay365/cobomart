<div class="container-fluid" style="margin-top: 10vh;">
	<div class="row">
	{{#each data}}
	  <div class="col-sm-6">
	    <div class="card">
	    	<h5 class="card-header">{{title}}</h5>
	      <div class="card-body">
	        <h5 class="card-title">Rs. {{price}}</h5>
	        <p class="card-text">{{description}}</p>
	        <p class="card-text">Negotiable : {{negotiable}} | Condition : {{condition}}</p>
	        <a href="/marketplace/{{_id}}" class="btn btn-primary">Purchase</a>
	      </div>
	    </div>
	  </div>
	{{/each}}
	</div>
</div>