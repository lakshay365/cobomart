<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          My Profile
        </div>
        <div class="card-body">
          <form action="/profile/update" action="POST">
            <div class="form-group row">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="name" value="{{user.name}}">
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="email" value="{{user.email}}">
              </div>
            </div>

            <div class="form-group row">
              <label for="institute" class="col-sm-2 col-form-label">Institute</label>
              <div class="col-sm-10">
                <select class="form-control" id="institute">
                  <option selected>Select your institute</option>
                  {{!-- Fill options dynamically here --}}
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
            </div>

            <button type="submit" class="btn btn-outline-danger float-right">Update</button>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>