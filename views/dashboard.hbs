<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          My Profile
        </div>
        <div class="card-body">
          <form action="/profile/update" method="POST">
            <div class="form-group row">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="name" id="name" value="{{user.name}}">
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="email" value="{{user.email}}">
              </div>
            </div>

            <div class="form-group row">
              <label for="instituteDetail" class="col-sm-2 col-form-label">Institute</label>
              <div class="col-sm-10">
                <div class="form-control" readonly name="instituteDetail" id="instituteDetail">
                  {{#if user.institute}} {{user.institute.name}}
                  <br>
                  <br>{{user.institute.address}} {{else}} Please update your institute. {{/if}}
                </div>
              </div>

            </div>

            <div class="form-group row">
              <div class="col-sm-10 ml-auto">
                <select class="form-control" name="institute" id="institute">
                  <option>Change your institute</option>
                  {{#each institutes}}
                  <option value="{{this._id}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <button type="submit" class="btn btn-outline-danger float-right">Update</button>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>