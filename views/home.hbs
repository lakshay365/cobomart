<div class="container-fluid">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="row">
        <div class="col-md">
          <h1 class="display-4"> Buy. Sell. Save.</h1>
          <p class="lead">No middle person. Save either you buy or sell.</p>
        </div>
        {{#unless user}}
        <div class="col-md-4">
          <a class="btn btn-primary btn-lg btn-block btn-google" href="/auth/google">Continue with Google</a>
          <br>
          <a class="btn btn-primary btn-lg btn-block btn-facebook" href="/auth/facebook">Continue with Facebook</a>
        </div>
        {{/unless}}
      </div>
    </div>
  </div>

  <!-- Rest of the body after jumbotron -->
  <div class="row">
    <div class="col-md-3">Implement a distance filter</div>
    <div class="col-md-9">
      {{#each ads}}
      <div class="card mb-3">
        <h5 class="card-header">{{title}}</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <h5 class="card-title">&#8377; {{price}}</h5>
              <p class="card-text">{{description}}</p>
              <p class="card-text">{{#unless negotiable}}Not {{/unless}}Negotiable | Condition : {{condition}}</p>
            </div>
            <div class="col-md-3">
              <a href="/marketplace/{{_id}}" class="btn btn-outline-info">Contact Seller</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>